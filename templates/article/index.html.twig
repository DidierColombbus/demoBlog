{% extends 'base.html.twig' %}

{% block title %}Index des articles{% endblock %}

{% block body %}
    <h1>Index des articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Image</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td class="w-50"><img class="w-50 mx-auto" src="{{ article.image }}"></td>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">Voir l'article</a>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}">Modifier l'article</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune informations trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_article_new') }}">Créer un nouvel article</a>
{% endblock %}
